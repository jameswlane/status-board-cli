{
  "name": "status-board-cli",
  "version": "0.0.0-development",
  "description": "CLI utility for status board",
  "main": "./lib/caporal.js",
  "bin": {
    "status-board-cli": "./bin/cli.js"
  },
  "repository": "git@github.com:jameswlane/status-board-cli.git",
  "author": "James W. Lane <james.w.lane@mac.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "ts:build": "tsc",
    "ts:watch": "tsc -w",
    "tslint": "tslint --config tslint.json --project tsconfig.json \"src/**/*.ts\" \"test/**/*.test.ts'\"",
    "tslint:fix": "tslint --config tslint.json --project tsconfig.json --fix \"src/**/*.ts\" \"test/**/*.test.ts'\"",
    "verify": "yarn verify:npmvet && yarn verify:david && yarn verify:nsp && yarn verify:tscheck && yarn tslint && yarn test",
    "verify:npmvet": "npmvet --renderer ci --strict",
    "verify:david": "david",
    "verify:nsp": "nsp check --output summary",
    "verify:check": "depcheck",
    "verify:tscheck": "types-checker",
    "setup": "npm i -g npmvet david nsp depcheck types-checker commitizen semantic-release-cli",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "react"
  ],
  "bugs": {
    "url": "https://github.com/jameswlane/status-board-cli/issues"
  },
  "homepage": "https://github.com/jameswlane/status-board-cli#readme",
  "dependencies": {
    "caporal": "0.8.0",
    "jsonfile": "4.0.0"
  },
  "devDependencies": {
    "@types/jsonfile": "4.0.1",
    "@types/node": "8.0.52",
    "coveralls": "3.0.0",
    "cz-conventional-changelog": "2.1.0",
    "jest": "21.2.1",
    "semantic-release": "8.2.0",
    "ts-jest": "21.2.2",
    "tslint": "5.8.0",
    "tslint-config-airbnb": "5.4.0",
    "typescript": "2.6.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
